extends template

block content 
    h1.w3-blue(tyle="text-shadow:2px 2px 0 #444",style="margin-top: 0px;")
        b.w3-margin-left Editar #{nome_rua}
    form.w3-container(method="POST")
        h3.w3-text-blue 
            b Nome 
        input.w3-input.w3-border.w3-border-indigo(type="text".name='_id',value=rua._id readonly)
        h3.w3-text-blue 
            b Adicionar imagem antiga
        h3.w3-text-blue 
            b Adicionar imagem atual
        h3.w3-text-blue 
            b Alterar Descrição
        textarea.w3-input.w3-border.w3-border-indigo(type="text",name="paragrafos",rows=rua.paragrafos.length*3/2)=texto
        .w3-container
            h4.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                b Lugares  
            .w3-panel.w3-light-grey.w3-border.w3-border-indigo
                ul.w3-ul(id='listalugares')
                    each l in rua.lugares
                        li
                            a(href="/")=l
            .w3-panel
                input.w3-input.w3-border.w3-border-indigo(type="text" placeholder="Insira Lugar" id="novolugar")
                button.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(style="width:20%" id="btnnlugar") Adicionar Lugar   
            center 
                hr(style="width:95%")
            h4.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                b Datas  
            .w3-panel.w3-light-grey.w3-border.w3-border-indigo
                ul.w3-ul(id='listadatas')
                    each d in rua.datas
                        li
                            a(href="/ruas/data/"+d)=d
            .w3-panel
                input.w3-input.w3-border.w3-border-indigo(type="text" placeholder="Insira Data" id="novadata")
                button.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(style="width:20%" id="btnndata") Adicionar Data
            center
                hr(style="width:95%")
            h4.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                b Entidades   
            .w3-panel.w3-light-grey.w3-border.w3-border-indigo
                ul.w3-ul(id='listaentidades')
                    each e in rua.entidades
                        li
                            a(href="/ruas/entidade/"+e.nome)=e.nome
            .w3-panel
                input.w3-input.w3-border.w3-border-indigo(type="text" placeholder="Insira Entidade"  id="novaentidade")
                button.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(style="width:20%" id="btnnentidade") Adicionar Entidade
        hr
        h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
            b Opções  
        .w3-row-padding.w3-center
            .w3-col.m12(style="width:20%")
                button.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(type="submit") Submeter
            .w3-col.m12(style="width:20%")        
                a.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(href="/rua/" + rua._id) Voltar
        br