extends template

block content 
    .modal(id="confirmardelete")
    h1.w3-blue(tyle="text-shadow:2px 2px 0 #444",style="margin-top: 0px;")
        b.w3-margin-left(id="nome_rua") #{nome_rua}
    .w3-container
        .w3-panel.w3-light-grey.w3-border.w3-border-indigo.w3-card-4
            h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                b Opções  
            .w3-row-padding.w3-center
                .w3-col.m12(style="width:20%")
                    a.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(href="/rua/fotos/" + rua._id) Adicionar Imagem
                .w3-col.m12(style="width:20%")
                    a.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(href="/rua/edit/" + rua._id) Atualizar Informação
                .w3-col.m12(style="width:20%")
                    a.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(href="/" id="linkrua1" target="_blank") Link Rua OpenStreetMap
                .w3-col.m12(style="width:20%")
                    a.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(href="/rua/delete/" + rua._id) Eliminar Rua
            br
        hr
        .w3-panel.w3-light-grey.w3-border.w3-border-indigo.w3-card-4
            h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                b Fotografias antigas
            - var i = 0
            each f in rua.figuras_antigas
                .w3-center(style="display:none;width:" + fwan + '%' id='fant'+i)
                    img.img-antiga.w3-border.w3-padding(src=f.path, style="width:100%;")
                    if f.legenda.length > 0
                        .w3-container.w3-text-blue.w3-center
                            h8 #[b Legenda]: #{f.legenda}
                - i += 1
            br
            .w3-row-padding.w3-center
                .w3-col.m12(style="width:20%")
                    br
                .w3-col.m12(style="width:20%")
                    br
                .w3-col.m12(style="width:20%")
                    button.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(id="anteriorfotoantiga") Fotografia anterior  
                .w3-col.m12(style="width:20%")
                    button.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(id="proximafotoantiga") Próxima fotografia
                .w3-col.m12(style="width:20%")
                    h6.w3-col(id="indexant") 0 Fotos
            br
        hr
        .w3-panel.w3-light-grey.w3-border.w3-border-indigo.w3-card-4
            h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                b Fotografias atuais
            - var i = 0
            each f in rua.figuras_atuais
                .w3-center(style="display:none;width:" + fwat + '%' id='fatu'+i)
                    img.img-atual.w3-border.w3-padding(src=f.path, style="width:100%;")
                    if f.legenda.length > 0
                        .w3-container.w3-text-blue.w3-center
                            h8 #[b Legenda]: #{f.legenda}
                - i += 1
            br
            .w3-row-padding.w3-center
                .w3-col.m12(style="width:20%")
                    br
                .w3-col.m12(style="width:20%")
                    br
                .w3-col.m12(style="width:20%")
                    button.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(id="anteriorfotoatual") Fotografia anterior
                .w3-col.m12(style="width:20%")
                    button.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(id="proximafotoatual") Próxima fotografia
                .w3-col.m12(style="width:20%")
                    h6.w3-col(id="indexatu") 0 Fotos
            br
        hr 
        .w3-panel.w3-light-grey.w3-border.w3-border-indigo.w3-card-4
            p 
                h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                    b Descrição
            each p in rua.paragrafos
                p=p
        hr 
        .w3-panel.w3-light-grey.w3-border.w3-border-indigo.w3-card-4
            p 
                h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                    b Lista casas   
                ul.w3-ul(id="listacasasul")
                    - var i = 0
                    each c in rua.casas
                        li.w3-bar(id='casa' + i style="display:none;")
                            .w3-panel.w3-leftbar.w3-border-blue
                                p #[b Número: #{c.num}] 
                                if c.enfiteuta.length > 0
                                    p Enfiteuta: #{c.enfiteuta.slice(0,30)} ...
                                if c.foro.length > 0
                                    p Foro: #{c.foro.slice(0,30)} ...
                                p Descrição: #{c.desc.join('\n').slice(0,130)} ...
                        - i+=1
            .w3-row-padding.w3-center
                .w3-col.m12(style="width:20%")
                    br
                .w3-col.m12(style="width:20%")
                    br
                .w3-col.m12(style="width:20%")
                    button.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(id="mostrarmenoscasas") Página anterior
                .w3-col.m12(style="width:20%")
                    button.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(id="mostrarmaiscasas") Próxima página
                .w3-col.m12(style="width:20%")
                    h6.w3-col(id="nrPaginasCasas") 0 Casas
            br
        hr
        h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
            b Links pesquisa
        .w3-panel.w3-light-grey.w3-border.w3-border-indigo.w3-card-4
            ul.w3-ul
                li
                    h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                        b Lugares  
                each l in rua.lugares
                    li
                        a(href="/rua/"+l.replaceAll(' ','_'))=l
        center 
            hr(style="width:95%") 
        .w3-panel.w3-light-grey.w3-border.w3-border-indigo.w3-card-4
            ul.w3-ul
                li 
                    h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                        b Datas 
                each d in rua.datas
                    li
                        a(href="/datas/data/"+d.replaceAll(' ','_'))=d
        center
            hr(style="width:95%") 
        .w3-panel.w3-light-grey.w3-border.w3-border-indigo.w3-card-4
            ul.w3-ul
                li
                    h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                        b Entidades  
                each e in rua.entidades
                    li
                        a(href="/entidades/entidade/"+e.nome.replaceAll(' ','_'))=e.nome
        center
            hr(style="width:95%")
        .w3-panel.w3-light-grey.w3-border.w3-border-indigo.w3-card-4
            ul.w3-ul
                li
                    h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                        b Últimas  atualizações 
                each u in rua.updates
                    li
                        p=`${u.username} : ${u.message} (${u.date})`
        hr
        .w3-panel.w3-light-grey.w3-border.w3-border-indigo.w3-card-4
            h3.w3-text-blue.w3-margin-left(tyle="text-shadow:2px 2px 0 #444")
                b Opções  
            .w3-row-padding.w3-center
                .w3-col.m12(style="width:20%")
                    a.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(href="/rua/fotos/" + rua._id) Adicionar Imagem
                .w3-col.m12(style="width:20%")
                    a.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(href="/rua/edit/" + rua._id) Atualizar Informação
                .w3-col.m12(style="width:20%")
                    a.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(href="/" id="linkrua2" target="_blank") Link Rua OpenStreetMap
                .w3-col.m12(style="width:20%")
                    a.w3-col.w3-btn.w3-blue.w3-border.w3-border-indigo.w3-hover-light-blue(href="/rua/delete/" + rua._id) Eliminar Rua
            br
